<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" fillHeight="false" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/11.0.1" fx:controller="org.voc5.javafxclient.controllers.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="NEVER">
            <children>
                <TextField fx:id="emailField" promptText="email"/>
                <PasswordField fx:id="passwordField" promptText="password"/>
                <Label text="Error" visible="false" fx:id="errorLabel"/>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#register" text="Register"/>
                        <Button alignment="TOP_LEFT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#login"
                                text="Login"/>
                    </children>
                </HBox>
                <CheckBox mnemonicParsing="false" text="Remember me" fx:id="rememberMe"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </children>
</HBox>
